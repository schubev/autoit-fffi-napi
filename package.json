{
  "name": "autoit-ffi-napi",
  "version": "0.0.1",
  "description": "FFI bindings for AutoIT",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "author": "Victor Schubert <v@schu.be>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build:build-codegen": "tsc -P src/codegen",
    "build:run-codegen": "node lib/codegen/index.js",
    "build:build-generated": "tsc",
    "build:type-declarations": "tsc --declaration --outDir types --emitDeclarationOnly",
    "build": "npm run build:build-codegen && npm run build:run-codegen && npm run prettier:generated && npm run build:type-declarations && npm run build:build-generated",
    "check:tsc": "tsc --noEmit",
    "check": "npm run check:tsc",
    "prettier:generated": "prettier --write src/functions/generated/*"
  },
  "devDependencies": {
    "@types/ffi-napi": "^2.4.1",
    "@types/jest": "^25.1.2",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "autoit-advanced-descriptor": "git+https://github.com/schubev/autoit-advanced-descriptor.git#v1.0.5",
    "ffi-napi": "^2.4.6",
    "ref": "^1.3.5"
  },
  "jest": {
    "roots": ["src"],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": ["151001"]
        }
      }
    }
  }
}
